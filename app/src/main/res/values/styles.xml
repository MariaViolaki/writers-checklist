<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="HeadingStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/magenta</item>
        <item name="android:fontFamily">@font/eimantas_paskonis_varna_regular</item>
        <item name="android:textSize">@dimen/large_text</item>
    </style>


    <style name="SubheadingStyle">
        <item name="android:drawableLeft">@drawable/ic_check_white_24dp</item>
        <item name="android:drawableStart">@drawable/ic_check_white_24dp</item>
        <item name="android:fontFamily">@font/eimantas_paskonis_varna_regular</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyle">
        <item name="android:fontFamily">@font/berylium_rg</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginBottom">@dimen/small_space</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:fontFamily">@font/berylium_rg</item>
        <item name="android:textSize">@dimen/hint_text</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:paddingLeft">@dimen/small_space</item>
        <item name="android:paddingRight">@dimen/small_space</item>
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:fontFamily">@font/berylium_rg</item>
    </style>

</resources>
